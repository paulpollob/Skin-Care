<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89A9C1"
    android:fitsSystemWindows="true"
    android:fillViewport="false"
    android:paddingHorizontal="5dp"
    tools:context=".reminder.Reminder">



<!--    <include layout="@layout/content_reminder" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="50dp"
                android:elevation="10dp"

                >
                <ImageView
                    android:id="@+id/headImg"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gif1"
                    />
                <Button
                    android:id="@+id/toggleAlarmButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HK"
                    android:onClick="schedule"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reminder_menu"
                />
        </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_reminder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/add_remind"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>