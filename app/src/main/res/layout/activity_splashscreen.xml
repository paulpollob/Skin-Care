<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#A4B9D7"
    android:layout_height="match_parent"
    tools:context=".splashscreen">
    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:src="@drawable/welcome3"
        android:layout_marginRight="50dp"
        android:paddingRight="78dp"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"

        android:fontFamily="@font/ananda"
        android:text="SkinSentry"
        android:textColor="#E64A19"
        android:textSize="30sp"



        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skin care And Disease Detection"
        android:fontFamily="@font/ananda"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="19dp"
        android:textColor="#303F9F"

        android:textSize="20sp"

        />
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="200dp"
        android:layout_height="170dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"

        android:progress="10"
        android:progressBackgroundTint="#0D5E56"
        android:progressTint="#3F51B5"
        android:layout_marginLeft="100dp"



        />

</LinearLayout>